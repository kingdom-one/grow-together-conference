---
// Components
import RolesGrid from '../../components/RolesGrid.astro';
import { Image } from 'astro:assets';

// Images
import squiggle from '../../assets/svg/squiggle.svg';
---

<section
	id='team-members'
	class='text-bg-primary py-5'
>
	<div class='container'>
		<div class='row justify-content-center'>
			<div class='col-xl-8 d-flex flex-column align-items-center'>
				<h2 class='text-white text-center fs-1'>
					Strong Teams <br />Grow&nbsp;<span class='text-spark-yellow'
						>Together</span
					>
				</h2>
				<Image
					src={squiggle}
					alt=''
					class='teams__squiggle w-75'
				/>
			</div>
		</div>
		<div class='row justify-content-center my-5 py-5'>
			<RolesGrid classes={'col-xl-8'} />
		</div>
	</div>
</section>
