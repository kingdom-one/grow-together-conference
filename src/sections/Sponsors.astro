---
import SponsorSwiper from '../components/SponsorSwiper.astro';
const isSponsorsPage = Astro.url.pathname.includes('/sponsors');
---

<style>
	/* .center-button {
        display: flex;
        justify-content: center;
    } */
	.center-button .col {
		text-align: center;
	}
</style>

<aside class='sponsors bg-secondary py-5'>
	<div class='container d-flex flex-column row-gap-4'>
		<div class='row'>
			<div class='col'>
				<h2
					class='sponsors__headline text-primary text-center text-capitalize'
				>
					Thank you to our sponsors
				</h2>
				<div class='row my-5'>
					{!isSponsorsPage && (
						<div class='row center-button'>
							<div class='col'>
								<a href='/sponsors' class='btn btn-primary'>Learn More</a>
							</div>
						</div>
					)}
				</div>
			</div>
		</div>
		<SponsorSwiper />
	</div>
</aside>
