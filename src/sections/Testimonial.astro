---
// Components
import { Image } from 'astro:assets';

// Images
import headshot from '../assets/laura.jpg';
---

<style lang='scss'>
	@use '../styles/abstracts/mixins' as m;
	.testimonial {
		&__grid {
			grid-template-columns: 1fr;

			@include m.media-breakpoint-up(lg) {
				grid-template-columns: 1fr 2fr;
			}

			&--content {
				@include m.media-breakpoint-up(lg) {
					grid-row: 1 / 3;
					grid-column: 2 / 3;
					display: flex;
					flex-direction: column;
					justify-content: center;
				}
			}
		}
	}
</style>

<section
	id='testimonial'
	class='testimonial text-bg-primary py-5'
>
	<div class='container'>
		<div class='row justify-content-between align-items-center'>
			<div class='col-3'>
				<figure
					class='mb-0 w-100 ratio ratio-1x1 rounded-circle overflow-hidden'
					data-aos='fade-right'
				>
					<Image
						class='object-fit-cover w-100'
						src={headshot}
						alt='Laura Di Conti'
					/>
				</figure>
			</div>
			<div class='col'>
				<div class='row justify-content-between flex-nowrap row-cols-2'>
					<div class='col-auto'>
						<span class='fw-bold me-5'>Calvary West Lake</span>
					</div>
					<div class='col-auto'>
						<span class='testimonial__meta--rating'
							>⭐️⭐️⭐️⭐️⭐️</span
						>
					</div>
				</div>
				<div class='content'>
					<h2 class='testimonial__headline mt-5 text-white'>
						Laura Di Conti
					</h2>
					<p class='testimonial__quote text-white mt-4 fs-5'>
						“The experience was great. From the arrival to the
						fellowship to the sessions to the food. Felt well cared
						for, and also the information was exactly what I was
						hoping for when I signed up.”
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	import AOS from 'aos/dist/aos.js';
	AOS.init();
</script>
