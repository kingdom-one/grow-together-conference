---
// Components
import { Image } from 'astro:assets';

// Images
import headshot from '../assets/laura.jpg';
---

<style lang='scss'>
	@use '../styles/abstracts/mixins' as m;
	.testimonial {
		&__grid {
			grid-template-columns: 1fr;

			@include m.media-breakpoint-up(lg) {
				grid-template-columns: 1fr 2fr;
			}

			&--content {
				@include m.media-breakpoint-up(lg) {
					grid-row: 1 / 3;
					grid-column: 2 / 3;
					display: flex;
					flex-direction: column;
					justify-content: center;
				}
			}

			picture {
				width: 75%;
				margin: 0 auto;
				@include m.media-breakpoint-up(lg) {
					width: 100%;
					grid-row: 1 / 3;
					grid-column: 1 / 2;
				}
			}
		}

		&__content {
			z-index: 5;
			position: relative;
		}

		&__image {
			width: 100%;
			max-width: 30rem;
			aspect-ratio: 1;
			height: auto;

			@include m.media-breakpoint-up(lg) {
				max-width: 100%;
			}
		}
	}
</style>

<section
	id='testimonial'
	class='testimonial text-bg-primary py-5'
>
	<div class='container'>
		<div class='row justify-content-center'>
			<div class='col-xl-10 testimonial__grid d-grid gap-3'>
				<Image
					data-aos='fade-right'
					class='testimonial__image rounded-circle'
					src={headshot}
					alt='Laura Di Conti'
				/>
				<div class='testimonial__grid--content'>
					<div
						class='testimonial__meta d-flex justify-content-between'
					>
						<span class='fw-bold me-5'>Calvary West Lake</span>
						<span class='testimonial__meta--rating'
							>⭐️⭐️⭐️⭐️⭐️</span
						>
					</div>
					<h2 class='testimonial__headline mt-5'>Laura Di Conti</h2>
					<p class='testimonial__quote text-white mt-4 fs-5'>
						“The experience was great. From the arrival to the
						fellowship to the sessions to the food. Felt well cared
						for, and also the information was exactly what I was
						hoping for when I signed up.”
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	import AOS from 'aos/dist/aos.js';
	AOS.init();
</script>
