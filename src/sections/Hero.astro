---
import { Image } from 'astro:assets';

import k1Logo from '../assets/svg/K1 Logo_White (SVG).svg';
import logo from '../assets/png/conference-logo.png';
---

<style lang='scss'>
	@use '../styles/abstracts/variables' as v;
	@use '../styles/abstracts/mixins' as m;

	.hero {
		padding: 6.5rem 0;

		.logo {
			width: 40rem;
			max-width: 100%;
			max-height: 30rem;
		}

		&__background {
			@include m.background-layers($opacity: 0.5);

			&--gradient {
				background: linear-gradient(
					to right,
					rgba(0, 255, 255, 0.4) 10%,
					rgba(v.$color-primary--light, 1) 30%
				);
			}
			&--color {
				background: var(--color-primary);
				background: linear-gradient(
					155deg,
					rgba(v.$color-primary, 1) 60%,
					rgba(v.$color-secondary, 1) 90%
				);
			}

			&.color-right {
				@include m.clip-path('right-bottom');
			}

			&.color-left {
				@include m.clip-path('left-bottom');
			}
		}
	}
</style>
<section
	id='hero'
	class='hero text-white position-relative'
>
	<div class='hero__background color-right'>
		<div class='hero__background--gradient'></div>
		<div class='hero__background--color'></div>
		<div class='hero__background--lower'></div>
		<div class='hero__background--upper'></div>
	</div>
	<div class='container position-relative z-3 overflow-hidden'>
		<div class='row justify-content-between'>
			<div class='col-6 col-md-3'>
				<a href='/'>
					<Image
						class='logo h-auto object-fit-contain'
						src={logo}
						alt='Grow Together Conference'
					/>
				</a>
			</div>
			<a
				href='https://kingdomone.co'
				target='_blank'
				class='col-6 col-md-3'
				aria-label='link to kingdom one homepage'
			>
				<Image
					src={k1Logo}
					alt='Kingdom One Logo'
					class='object-fit-contain w-100 h-50'
				/>
			</a>
		</div>
		<slot />
	</div>
</section>
