---
import LocationPin from '../components/LocationPin.astro';
import { TICKETS_URL } from '../consts';
import AttractionPreview from '../components/AttractionPreview.astro';
import NearbyHotel from '../components/NearbyHotel.astro';
import InlandEmpireMountains from '../components/svg/inland-empire-mountains.astro';

const { location } = Astro.props;
const {
	name,
	description,
	hotelsLink,
	iframe,
	locationDetails,
	date,
	attractions,
} = location;
---

<section class='location-details inland-empire overflow-x-hidden py-5'>
	<div class='container position-relative'>
		<div class='row'>
			<div class='col-12'>
				<figure class='mb-0 w-100'>
					<InlandEmpireMountains color='var(--bs-dark)' />
				</figure>
			</div>
		</div>
		<div class='row my-5'>
			<div class='col-lg-7'>
				<div class='row'>
					<h2>{name}</h2>
					<p class='fs-5 fst-italic mark'>
						{description}
					</p>
				</div>
				<div class='row'>
					<h3 class='mt-5'>Date & Time</h3>
					<p class='fs-5'>
						{date}
					</p>
				</div>
				<div class='row my-5'>
					<div class='col-lg-8'>
						<NearbyHotel href={hotelsLink} />
					</div>
				</div>
				<div class='row'>
					<h3>Local Attractions</h3>
					<ul class='row ms-4'>
						{
							attractions.map((attraction) => (
								<AttractionPreview attraction={attraction} />
							))
						}
					</ul>
				</div>
			</div>
			<div class='col-lg-5 mt-5 mt-lg-0'>
				<h3>Location</h3>
				<div
					class='border rounded-5 overflow-hidden ratio ratio-1x1 w-100'
				>
					<iframe
						src={iframe.src}
						width='100%'
						height='100%'
						style='border:0;'
						allowfullscreen=''
						title={iframe.title}
						loading='lazy'
						referrerpolicy='no-referrer-when-downgrade'
					></iframe>
				</div>
				<LocationPin
					classes='mt-3'
					location={locationDetails.name}
					address={locationDetails.address}
				/>
			</div>
		</div>
		<div class='row justify-content-center'>
			<div class='col text-center'>
				<a
					href={TICKETS_URL}
					class='btn btn-outline-dark rounded-pill'
					>Get Tickets</a
				>
			</div>
		</div>
	</div>
</section>
