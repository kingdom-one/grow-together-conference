---
// Components
import { Image } from 'astro:assets';

// Images
import mugWhite from '../assets/svg/icons/mug--white.svg';
import badgeWhite from '../assets/svg/icons/badge--white.svg';
import megaphoneWhite from '../assets/svg/icons/megaphone--white.svg';
import chartWhite from '../assets/svg/icons/chart--white.svg';
import paperWhite from '../assets/svg/icons/paper--white.svg';
import paperclipWhite from '../assets/svg/icons/paperclip--white.svg';
import phoneWhite from '../assets/svg/icons/phone--white.svg';
import dollarWhite from '../assets/svg/icons/dollar--white.svg';
import shieldWhite from '../assets/svg/icons/shield--white.svg';
import lineGradient from '../assets/png/line-gradient.png';
import LearnMoreVideoModal from './LearnMoreVideoModal.astro';

const roles = [
	{
		image: mugWhite,
		role: 'Senior Leaders',
		id: 'senior-leaders',
		videoId: '-RepsljN0EE',
	},
	{
		image: badgeWhite,
		role: 'People Managers',
		id: 'people-managers',
		videoId: 'SqVPSKCjAb0',
	},
	{
		image: megaphoneWhite,
		role: 'Marcom',
		id: 'marcom',
		videoId: '1gdQeeCZDEI',
	},
	{
		image: chartWhite,
		role: 'Advanced HR',
		id: 'advanced-hr',
		videoId: '-gBRRXGMBWg',
	},
	{
		image: paperWhite,
		role: 'Legal',
		id: 'legal',
	},
	{
		image: paperclipWhite,
		role: 'HR Foundations',
		id: 'hr-foundations',
		videoId: 'OXnOyePXp_s',
		posterQuality: 'hqdefault',
	},
	{
		image: phoneWhite,
		role: 'Business Admin',
		id: 'business-admin',
		videoId: 'KhwNxRABIJY',
	},
	{
		image: dollarWhite,
		role: 'Finance',
		id: 'finance',
		videoId: 'vKeZSDSUqXE',
	},
	{
		image: shieldWhite,
		role: 'Safety',
		id: 'safety',
		videoId: 'B0yPZEP-8tc',
	},
];

const { classes } = Astro.props;
---

<style lang="scss">
	@use '../styles/abstracts/mixins' as m;
	.roles-grid {
		display: grid;
		place-content: center;

		@include m.media-breakpoint-up(md) {
			grid-template-columns: repeat(3, 1fr);
			gap: 4rem;
		}

		&__line-gradient {
			height: 10rem;
			width: 0.2rem;
		}
	}
</style>

<div class={`${classes} roles-grid`}>
	{
		roles.map((role) => (
			<div class="d-flex flex-column align-items-center">
				<div class="roles-grid__image">
					<Image
						src={role.image}
						alt=""
						data-aos="zoom-in"
						class="h-auto"
					/>
				</div>
				<p class="fw-bold fs-4 text-uppercase text-center my-3">
					{role.role}
				</p>
				<Image src={lineGradient} alt="" class="mt-auto" />
				<LearnMoreVideoModal
					title={role.role}
					videoId={role.videoId}
					id={role.id}
					posterQuality={role.posterQuality ?? 'maxresdefault'}
				/>
			</div>
		))
	}
</div>
